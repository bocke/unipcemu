#Windows makefile

#Output filename
TARGET = x86EMU.exe

TARGET := $(BUILD_DIR)/$(TARGET)

OBJS := $(patsubst %.o,$(BUILD_DIR)/%.o,$(OBJS))

ifndef CFLAGS
CFLAGS = 
endif

ifndef CC
CC = g++
endif

#General build rule
all: $(TARGET)

%.o:%.c
$(CC) -o $@ $< $(CFLAGS)

#Build rules for output
$(TARGET):$(OBJS)
$(CC) -o $@ $<

#Build rule for objects
%.o:%.c
$(CC) -o $@ -c $<