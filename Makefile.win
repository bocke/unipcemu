#Windows makefile

#Output filename
TARGET = x86EMU.exe

TARGET := $(BUILD_DIR)/$(TARGET)

OBJS := $(patsubst %.o,$(BUILD_DIR)/%.o,$(OBJS))

CFLAGS = -I.

LIBS = -lSDL -lSDL_gfx

ifndef CC
CC = gcc
endif

$(BUILD_DIR)/%.o:%.c
	$(CC) $(CFLAGS) -o $@ -c $<

$(TARGET): $(OBJS)
	$(CC) $(LIBS) -o $(TARGET) $(OBJS)

win: $(TARGET) 
